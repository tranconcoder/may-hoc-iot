<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Traffic Statistics</h3>
                    <div class="card-tools">
                        <div class="input-group input-group-sm">
                            <input type="date" id="startDate" class="form-control" value="{{data.startDate}}">
                            <input type="date" id="endDate" class="form-control" value="{{data.endDate}}">
                            <div class="input-group-append">
                                <button type="button" class="btn btn-primary" id="filterBtn">
                                    <i class="fas fa-filter"></i> Filter
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    {{#if error}}
                        <div class="alert alert-danger">
                            {{error}}
                        </div>
                    {{else}}
                        <div class="row">
                            <div class="col-md-6">
                                <canvas id="trafficChart"></canvas>
                            </div>
                            <div class="col-md-6">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Date</th>
                                                <th>Total Vehicles</th>
                                                <th>Violations</th>
                                            </tr>
                                        </thead>
                                        <tbody id="statisticsTable">
                                            {{#each data.statistics}}
                                                <tr>
                                                    <td>{{this.date}}</td>
                                                    <td>{{this.totalVehicles}}</td>
                                                    <td>{{this.violations}}</td>
                                                </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/traffic-statistics.js"></script> 