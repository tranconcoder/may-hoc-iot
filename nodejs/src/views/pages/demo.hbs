<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Demo Page</title>
    <link rel="stylesheet" href="/css/demo.css" />
  </head>
  <body>
    <div class="container">
      <!-- Area 1: Car Simulation -->
      <div class="area">
        <div class="area-title">Car Simulation</div>
        <div class="video-section">
          <div id="car-simulation-area">
            <div id="car-container">
              <img
                id="car-image"
                src="https://otoso1.com.vn/wp-content/uploads/2019/05/otoso1-lam-bien-so-dai-1.jpg"
                alt="Car with Vietnamese License Plate"
              />
            </div>
            <!-- Add zoom controls -->
            <div class="zoom-controls">
              <button class="zoom-btn" id="zoom-out">-</button>
              <div class="car-size-display"><span
                  id="car-size"
                >100</span>%</div>
              <button class="zoom-btn" id="zoom-in">+</button>
            </div>
            <div id="violation-indicator">RED LIGHT VIOLATION!</div>
            <div id="position-indicator">Position:
              <span id="position-value">0</span>%, X:
              <span id="position-x">50</span>%</div>
          </div>
        </div>
      </div>

      <!-- Area 2: Traffic Light Control -->
      <div class="area">
        <div class="area-title">Traffic Light Control</div>
        <div class="traffic-light-container">
          <div class="traffic-light">
            <div class="light red" id="red-light"></div>
            <div class="light yellow" id="yellow-light"></div>
            <div class="light green" id="green-light"></div>
          </div>
          <div class="controls">
            <button
              class="control-btn btn-red"
              onclick="activateLight('red')"
            >Red Light</button>
            <button
              class="control-btn btn-yellow"
              onclick="activateLight('yellow')"
            >Yellow Light</button>
            <button
              class="control-btn btn-green"
              onclick="activateLight('green')"
            >Green Light</button>
          </div>
        </div>
      </div>
    </div>

    <script src="/scripts/demo/main.js"></script>
  </body>
</html>